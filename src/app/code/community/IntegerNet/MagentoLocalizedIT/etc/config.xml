<config>
    <modules>
        <IntegerNet_MagentoLocalizedIT>
            <version>0.1.0</version>
        </IntegerNet_MagentoLocalizedIT>
    </modules>
    <default>
        <general>
            <country>
                <allow>IT</allow>
            </country>
            <locale>
                <code>it_IT</code>
                <code_fallback></code_fallback>
                <firstday>1</firstday>
            </locale>
            <store_information>
                <merchant_country>IT</merchant_country>
            </store_information>
            <imprint>
                <country>IT</country>
                <display_copyright>1</display_copyright>
            </imprint>
        </general>
        <design>
            <header>
                <welcome>Benvenuto!</welcome>
            </header>
        </design>
        <catalog>
            <custom_options>
                <time_format>24h</time_format>
                <date_fields_order>d,m,y</date_fields_order>
            </custom_options>
            <baseprice>
                <base_price_incl_tax>1</base_price_incl_tax>
                <frontend_label>corrisponde {{baseprice}} per {{reference_amount}} {{reference_unit}}</frontend_label>
            </baseprice>
        </catalog>
        <sales>
            <reorder>
                <allow>0</allow>
                <hide_sidebar_box>1</hide_sidebar_box>
            </reorder>
        </sales>
        <autoshipping>
            <settings>
                <enabled>1</enabled>
                <country_id>IT</country_id>
            </settings>
        </autoshipping>
        <carriers>
            <flatrate>
                <title>Restituisce</title>
                <name>forfettario</name>
                <type>O</type>
                <price>4.90</price>
            </flatrate>
            <freeshipping>
                <active>1</active>
                <title>Restituisce</title>
                <name>Spedizione gratuita</name>
                <free_shipping_subtotal>50</free_shipping_subtotal>
            </freeshipping>
        </carriers>
        <payment>
            <ccsave>
                <active>0</active>
            </ccsave>
            <NLeckmo>
                <active>0</active>
            </NLeckmo>
            <free>
                <title>gratis</title>
            </free>
            <banktransfer>
                <active>1</active>
                <title>pagamento anticipato</title>
                <sort_order>20</sort_order>
            </banktransfer>
        </payment>
        <magento_localized>
            <module_title>Magento IT</module_title>
            <module_code>magento_it</module_code>
            <module_url>http://www.nr-apps.com/store/magento-it.html</module_url>
            <logo_filename>magento_localized/logo.png</logo_filename>
            <tracking_url>//www.nr-apps.com/n/germanstoreconfig/tracking</tracking_url>
            <newsfeed_url>http://www.nr-apps.com/n/media/germanstoreconfig/feed.xml</newsfeed_url>
            <iframe_url_prefix>//www.nr-apps.com/n/magento_it_</iframe_url_prefix>
            <iframe_url_suffix>.html</iframe_url_suffix>
            <iframe_main_language_code>it</iframe_main_language_code>
            <iframe_fallback_language_code>en</iframe_fallback_language_code>
            <feed_url_prefix>http://www.nr-apps.com/n/media/germanstoreconfig/</feed_url_prefix>
            <default_language>it_IT</default_language>
            <available_languages>
                <en_US />
                <fr_FR />
                <es_ES />
            </available_languages>
            <country>IT</country>
            <currency>EUR</currency>
            <timezone>Europe/Berlin</timezone>
            <install_guide_url>
                <it>http://www.nr-apps.com/n/magento_it_it/guide.html</it>
                <default>http://www.nr-apps.com/n/magento_it_en/guide.html</default>
            </install_guide_url>
            <survey_url>
                <it>//www.nr-apps.com/n/magento_it_it/survey.html</it>
                <default>//www.nr-apps.com/n/magento_it_en/survey.html</default>
            </survey_url>
            <form_fields>
                <general__imprint__vat_id>
                    <type>text</type>
                    <label>IVA-ID</label>
                    <sorting>200</sorting>
                    <optional>1</optional>
                </general__imprint__vat_id>
                <general__imprint__tax_number>
                    <type>text</type>
                    <label>Codice fiscale</label>
                    <sorting>210</sorting>
                    <optional>1</optional>
                </general__imprint__tax_number>
                <general__imprint__court>
                    <type>text</type>
                    <label>Registrati corte</label>
                    <sorting>220</sorting>
                    <optional>1</optional>
                </general__imprint__court>
                <general__imprint__register_number>
                    <type>text</type>
                    <label>Registrati numero</label>
                    <sorting>230</sorting>
                    <optional>1</optional>
                </general__imprint__register_number>
                <general__imprint__financial_office>
                    <type>text</type>
                    <label>ufficio finanziario</label>
                    <sorting>240</sorting>
                    <optional>1</optional>
                </general__imprint__financial_office>
                <general__imprint__ceo>
                    <type>text</type>
                    <label>Amministratore delegato</label>
                    <sorting>250</sorting>
                    <optional>1</optional>
                </general__imprint__ceo>
                <general__imprint__owner>
                    <type>text</type>
                    <label>proprietario</label>
                    <sorting>260</sorting>
                    <optional>1</optional>
                </general__imprint__owner>
            </form_fields>
            <modules>
            </modules>
        </magento_localized>
        <magesetup>
            <default_country>IT</default_country>
        </magesetup>
    </default>
</config>